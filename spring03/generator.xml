<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <context id="DB2Tables" targetRuntime="MyBatis3">
  	<!-- 配置数据源 -->
    <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
        userId="lijing2"
        password="123">
    </jdbcConnection>

	<!-- 
		类型解析  默认false 将  Decimal 和  number 解析为  Integer   
		value = true 时把decimal 和 number 解析成BigDecimal
	 -->
    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

	<!-- 
		targetProject:生成po类的位置
	 -->
    <javaModelGenerator targetPackage="cn.com.demo.po" targetProject=".\src">
      <!-- 
      	enableSubPackages 是否让 schema 作为包的后缀
       -->
      <property name="enableSubPackages" value="false" />
      <!-- 清理掉前后的空格 -->
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

	<!-- mapper  xml  的位置 -->
    <sqlMapGenerator targetPackage="cn.com.demo.mapper"  targetProject=".\src">
      <property name="enableSubPackages" value="false" />
    </sqlMapGenerator>
	
	<!-- mapper 接口的位置 -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="cn.com.demo.mapper"  targetProject=".\src">
      <property name="enableSubPackages" value="false" />
    </javaClientGenerator>

	<!-- 
		需要映射的表 
	 -->
	 <table tableName="p_um_user"></table>
	 <table tableName="p_um_user_role"></table>
	 <table tableName="p_um_role"></table>
	 <table tableName="p_um_role_authority"></table>
	 <table tableName="p_um_authority"></table>
	 <table tableName="p_um_authority_module"></table>
	
    <table schema="DB2ADMIN" tableName="ALLTYPES" domainObjectName="Customer" >
      <property name="useActualColumnNames" value="true"/>
      <generatedKey column="ID" sqlStatement="DB2" identity="true" />
      <columnOverride column="DATE_FIELD" property="startDate" />
      <ignoreColumn column="FRED" />
      <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />
    </table>

  </context>
</generatorConfiguration>