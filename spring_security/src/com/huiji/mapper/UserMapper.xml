<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huiji.mapper.UserMapper">
<select id="getUser" parameterType="String" resultType="userinfoCustom">
	select * from t_user where username=#{username}
</select>

<select id="getUserAndRole" parameterType="int" resultType="roleInfo">
select r.id,r.rolename,r.code from t_role r,t_user_role ur where r.id=ur.roleid and ur.userid=#{_parameter}
</select>
</mapper>